#!/bin/sh
#
# Display splash images on poweron and poweroff
#

SPLASH_IMAGE_POWERON=/var/lib/splash/poweron.png
SPLASH_IMAGE_POWEROFF=/var/lib/splash/poweroff.png

case "$1" in
	start)
		printf "Displaying splash image (poweron): "
		echo "q" | /usr/bin/fbv "$SPLASH_IMAGE_POWERON" >/dev/null
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	stop)
		printf "Displaying splash image (poweroff): "
		echo "q" | /usr/bin/fbv "$SPLASH_IMAGE_POWEROFF" >/dev/null
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	*)
		echo "Usage: $0 {start|stop}"
		exit 1
esac

exit $?
